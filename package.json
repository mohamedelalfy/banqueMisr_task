{
  "name": "client",
  "version": "2.1.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production --aot --build-optimizer",
    "prod:stats": "ng build --configuration production --aot --build-optimizer --stats-json",
    "prod:details": "webpack-bundle-analyzer ./dist/client/stats.json",
    "deploy:firebase": "firebase deploy",
    "test": "ng test",
    "format": "prettier --single-quote --trailing-comma all --print-width 120 --arrow-parens always --tab-width 4 --write",
    "tslint": "tslint \"src/**/*.ts\"",
    "stylelint": "stylelint \"src/**/*.scss\"",
    "lint": "ng lint \"src/**/*.ts\"",
    "update": "ng update @angular/cli @angular/core",
    "update:cli": "ng update @angular/cli",
    "update:core": "ng update @angular/core",
    "e2e": "ng e2e",
    "resources": "node resources/generate-resources.js",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run format",
      "npm run tslint",
      "git add"
    ],
    "src/**/*.scss": [
      "npm run stylelint",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ofcyln/currency-exchange.git"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.0.2",
    "@angular/cdk": "^14.0.2",
    "@angular/common": "^14.0.2",
    "@angular/compiler": "^14.0.2",
    "@angular/core": "^14.0.2",
    "@angular/forms": "^14.0.2",
    "@angular/material": "^14.0.2",
    "@angular/platform-browser": "^14.0.2",
    "@angular/platform-browser-dynamic": "^14.0.2",
    "@angular/router": "^14.0.2",
    "@angular/service-worker": "^14.0.2",
    "@ngx-loading-bar/http-client": "^2.2.0",
    "@ngx-translate/core": "^11.0.1",
    "@ngx-translate/http-loader": "^4.0.0",
    "bootstrap": "4.3.1",
    "core-js": "^2.6.9",
    "currency-symbol-map": "^4.0.4",
    "rxjs": "^6.5.4",
    "rxjs-tslint": "^0.1.8",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.0.2",
    "@angular/cli": "^14.0.2",
    "@angular/compiler-cli": "^14.0.2",
    "@angular/language-service": "^14.0.2",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "^2.0.6",
    "@types/node": "^12.11.1",
    "angular-spec-generator": "^1.1.0",
    "codelyzer": "^6.0.0",
    "firebase-tools": "^6.12.0",
    "husky": "^0.14.3",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-cli": "^2.0.0",
    "karma-coverage": "~2.0.3",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "karma-trx-reporter": "^0.4.3",
    "lint-staged": "^4.3.0",
    "prettier": "^1.18.2",
    "protractor": "~7.0.0",
    "puppeteer": "^1.18.1",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.3.0",
    "ts-node": "^7.0.1",
    "tslint": "~6.1.0",
    "typescript": "4.6.4",
    "webpack-bundle-analyzer": "^3.8.0"
  }
}